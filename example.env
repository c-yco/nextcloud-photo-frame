# Nextcloud WebDAV URL
# Format: https://<your-domain>/remote.php/dav/files/<your-username>
NC_URL=https://cloud.example.com/remote.php/dav/files/your_username

# Nextcloud Username
NC_USER=your_username

# Nextcloud App Password (generate this in Nextcloud Security settings)
NC_PASS=your_app_password

# Path to the folder containing photos in Nextcloud (default is /Photos/)
# This path is relative to the WebDAV root.
NC_PHOTO_PATH=/Photos/

# Scan Schedule (Cron Syntax)
# Default: 0 1 * * * (Every day at 1 AM)
# Examples:
# */30 * * * * (Every 30 mins)
# 0 * * * * (Every hour)
SCAN_CRON=0 1 * * *

# Optional: Weather Configuration (Open-Meteo)
# Leave empty to disable weather display
WEATHER_LAT=
WEATHER_LON=

# Language (en, de, fr, es)
# Default: en
APP_LANG=en

# How often to change the photo (in seconds)
# Default: 30
APP_RELOAD_INTERVAL=30

# Quiet time: periods where the photo should NOT change
# Format: HH:MM-HH:MM (comma separated for multiple ranges)
# Example: 22:00-06:00 (no changes during night)
APP_QUIET_TIME=

# Optional: Show QR code with link to original Nextcloud image
# Set to true to enable
SHOW_QR_CODE=false
